# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Runs all the tests"
  lane :test do
    scan(
      scheme: "ApplicationCoordinator",
      code_coverage: true
    )
  end

  desc "Runs coverage"
  lane :coverage do
    test
    slather(
      travis: true,
      scheme: "ApplicationCoordinator",
      coveralls: true,
      proj: "ApplicationCoordinator.xcodeproj"
    )
  end

  desc "Sonar scan"
  lane :sonar do
    UI.important 'Displaying token [Begin]'
    UI.important ENV["SONAR_TOKEN"]
    UI.important 'Displaying token [End]'
    # sonar(
    #   project_key: project_key,
    #   project_name: project_name,
    #   project_version: project_version,
    #   sources_path: File.expand_path("../SCB-FastEasy"),
    #   source_encoding: 'UTF-8',
    #   sonar_runner_args: runner_arguments.join(' '),
    #   sonar_login: login_token
    # )
  end
end
